NODE_ENV=production
VERSION=0.0.1
PROTOCOL=https
PORT=443
HOST=yourdomain.com
ALLOW_ORIG=["https://yourdomain.com","https://www.yourdomain.com"]
KEYCLOAK_DOMAIN=https://keycloak.yourdomain.com
KEYCLOAK_REALM=rest-nodejs-cleanarch-template
API_PREFIX=/api
PG_DB_NAME=pinapp_prod
PG_DB_HOST=postgres-prod
PG_DB_PORT=5432
PG_DB_USER=postgres_prod
PG_DB_PASS=your_secure_password
PG_DB_SCHEMA=public
ORACLE_DB_NAME=freepdb1
ORACLE_DB_HOST=oracle-prod
ORACLE_DB_PORT=1521
ORACLE_DB_USER=hr_prod
ORACLE_DB_PASS=your_secure_oracle_password
ORACLE_DB_SCHEMA=HR
KAFKA_CLIENTID=RESTAPI_PROD
KAFKA_BROKERS=["kafka-prod:9093"]
DEFAULT_DATASOURCE=postgres # or 'oracle'
MAX_RETRIES=10
RETRY_DELAY=15000
CIRCUIT_BREAKER_FAILURE_THRESHOLD=10
CIRCUIT_BREAKER_RESET_TIMEOUT=30000
DB_MONITORING_INTERVAL=60000  # Check DB every 60 seconds

# High Performance Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50000
PG_POOL_MAX=100
PG_POOL_MIN=10
PG_POOL_IDLE_TIMEOUTMillis=30000
