{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "./",
    "paths": {
      "test/*": [
        "test/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
    ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts"
  ]
}